#!/bin/bash

echo "ğŸ”§ Actualizando el sistema..."
sudo apt update && sudo apt install -y \
    ca-certificates \
    curl \
    gnupg \
    lsb-release

echo "ğŸ”‘ AÃ±adiendo la clave GPG de Docker..."
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | \
    sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg

echo "ğŸ“¦ AÃ±adiendo repositorio oficial de Docker..."
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
  https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

echo "ğŸš€ Instalando Docker Engine y plugins..."
sudo apt update
sudo apt install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

echo "ğŸ§ª Verificando la instalaciÃ³n..."
docker --version
docker compose version

echo "ğŸ‘¤ AÃ±adiendo usuario actual al grupo docker..."
sudo usermod -aG docker $USER
echo "âœ… Docker instalado correctamente. Reinicia sesiÃ³n o ejecuta 'newgrp docker' para usar Docker sin sudo."

echo "ğŸ‰ Â¡Listo! Puedes ejecutar: docker run hello-world"
